<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.LoginActivity"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="99dp" android:id="@+id/txtEmailLogin" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" android:hint="email"/>
    <Button
            android:text="LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="50dp" android:id="@+id/btnLogin"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassLogin" android:onClick="btnLoginClicked"/>
    <TextView
            android:text="Don't have an account?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="128dp" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" android:layout_marginTop="32dp"
            android:textAlignment="center"/>
    <Button
            android:text="SIGN UP HERE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="128dp" android:id="@+id/btnSignUp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white" android:onClick="btnSignUpClicked"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteX="50dp" android:id="@+id/txtPassLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEmailLogin" android:hint="password"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginSpinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>